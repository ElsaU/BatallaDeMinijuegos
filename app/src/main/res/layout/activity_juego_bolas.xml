<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1DCA06D"
    tools:context=".minijuegos.ActivityJuegoBolas">

    <ImageView
        android:id="@+id/imagenBomba2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenBomba3"
        app:layout_constraintVertical_bias="0.18"
        app:srcCompat="@drawable/bomba" />

    <TextView
        android:id="@+id/textTiempo"
        android:layout_width="338dp"
        android:layout_height="138dp"
        android:fontFamily="@font/balloons"
        android:textAlignment="center"
        android:textColor="#6B0B9F"
        android:textSize="120sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCronometro"
        android:layout_width="112dp"
        android:layout_height="49dp"
        android:fontFamily="@font/balloons"
        android:textAlignment="center"
        android:textColor="#FB0202"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002" />

    <TextView
        android:id="@+id/textPuntos"
        android:layout_width="102dp"
        android:layout_height="49dp"
        android:fontFamily="@font/balloons"
        android:text="@string/puntos"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002" />

    <Button
        android:id="@+id/boton_salir"
        android:layout_width="93dp"
        android:layout_height="45dp"
        android:background="@drawable/color_rojo_sin_borde"
        android:enabled="false"
        android:fontFamily="@font/balloons"
        android:onClick="salir"
        android:text="@string/boton_salir"
        android:textColor="#DCF4EFEF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toEndOf="@+id/textPuntos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imagenBomba4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCronometro"
        app:layout_constraintVertical_bias="0.110000014"
        app:srcCompat="@drawable/bomba" />

    <ImageView
        android:id="@+id/imagenBomba1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenBomba2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bomba" />

    <ImageView
        android:id="@+id/imagenBomba3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.731"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenBomba4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bomba" />

    <ImageButton
        android:id="@+id/botonMoverArriba"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/color_n"
        android:foreground="@drawable/flecha"
        android:onClick="moverNave"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCronometro"
        app:layout_constraintVertical_bias="0.97" />

    <ImageView
        android:id="@+id/imagenMeta"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:background="#000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCronometro"
        app:layout_constraintVertical_bias="0.050000012"
        app:srcCompat="@drawable/meta" />

    <ImageView
        android:id="@+id/imagenNave"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCronometro"
        app:layout_constraintVertical_bias="0.75"
        app:srcCompat="@drawable/nave" />

</androidx.constraintlayout.widget.ConstraintLayout>