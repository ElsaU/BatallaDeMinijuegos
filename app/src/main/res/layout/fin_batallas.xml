<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5000000">

    <TextView
        android:id="@+id/textCorrecto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/best_in_class"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="@string/textoBatallaTerminada"
        android:textColor="#BAFAFAFA"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <TextView
        android:id="@+id/textNombre1"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:fontFamily="@font/best_in_class"
        android:paddingTop="10sp"
        android:textAlignment="textStart"
        android:textColor="#BAFAFAFA"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCorrecto2"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/textNombre2"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:fontFamily="@font/best_in_class"
        android:paddingTop="10sp"
        android:textAlignment="textStart"
        android:textColor="#BAFAFAFA"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNombre1"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/textoPuntosFinales1"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:fontFamily="@font/best_in_class"
        android:paddingTop="10dp"
        android:textAlignment="textEnd"
        android:textColor="#BAFAFAFA"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCorrecto2"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/textoPuntosFinales2"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:fontFamily="@font/best_in_class"
        android:paddingTop="10dp"
        android:textAlignment="textEnd"
        android:textColor="#BAFAFAFA"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoPuntosFinales1"
        app:layout_constraintVertical_bias="0.01999998" />

    <Button
        android:id="@+id/botonAceptar"
        android:layout_width="214dp"
        android:layout_height="98dp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/color_azul"
        android:fontFamily="@font/best_in_class"
        android:text="@string/boton_aceptar"
        android:textColor="#BAFAFAFA"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGanarPerder"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/textGanarPerder"
        android:layout_width="367dp"
        android:layout_height="65dp"
        android:fontFamily="@font/best_in_class"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textColor="#BAFAFAFA"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNombre2"
        app:layout_constraintVertical_bias="0.01999998" />
</androidx.constraintlayout.widget.ConstraintLayout>