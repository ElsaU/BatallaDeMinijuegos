        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/textPuntos5"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:fontFamily="@font/best_in_class"
        android:text="@string/etiq_guion"
        android:textAlignment="center"
        android:textColor="#BAFAFAFA"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewJuego3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPuntos3"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/textPuntos3"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:fontFamily="@font/best_in_class"
        android:text="@string/etiq_guion"
        android:textAlignment="center"
        android:textColor="#BAFAFAFA"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewJuego2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPuntos1"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/textNombreJ2"
        android:layout_width="165dp"
        android:layout_height="61dp"
        android:background="@drawable/color_n"
        android:fontFamily="@font/best_in_class"
        android:textAlignment="center"
        android:textColor="#BAFAFAFA"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.00999999" />

    <TextView
        android:id="@+id/textNombreJ1"
        android:layout_width="165dp"
        android:layout_height="61dp"
        android:background="@drawable/color_n"
        android:fontFamily="@font/best_in_class"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#BAFAFAFA"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.00999999" />

    <TextView
        android:id="@+id/textView9"
