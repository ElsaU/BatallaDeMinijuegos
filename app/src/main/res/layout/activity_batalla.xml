        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/textComenzando"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:fontFamily="@font/best_in_class"
        android:paddingTop="5dp"
        android:text="@string/etiq_cargar_batalla"
        android:textAlignment="center"
        android:textColor="#BAFAFAFA"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.98" />

    <TextView
        android:id="@+id/textCronom"
        android:layout_width="85dp"
        android:layout_height="34dp"
        android:fontFamily="@font/best_in_class"
        android:textAlignment="center"
        android:textColor="#BE000000"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="251dp"
        android:layout_height="40dp"
        android:fontFamily="@font/best_in_class"
        android:text="@string/textoPuntuaciones"
        android:textAlignment="center"
        android:textColor="#BAFAFAFA"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCronom"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewJuego1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewJuego2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
