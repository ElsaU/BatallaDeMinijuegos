        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewJuego3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewJuego2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textPuntos2"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:fontFamily="@font/best_in_class"
        android:text="@string/etiq_guion"
        android:textAlignment="center"
        android:textColor="#BAFAFAFA"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
