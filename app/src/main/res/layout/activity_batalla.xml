    <TextView
        android:id="@+id/textPuntos1"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:fontFamily="@font/best_in_class"
        android:text="@string/etiq_guion"
        android:textAlignment="center"
        android:textColor="#BAFAFAFA"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewJuego1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.01999998" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="371dp"
        android:layout_height="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textComenzando"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewJuego3"
        app:layout_constraintVertical_bias="0.050000012">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="97dp"
        android:layout_height="35dp"
        android:fontFamily="@font/best_in_class"
        android:text="@string/textoTotal"
        android:textAlignment="center"
        android:textColor="#BAFAFAFA"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textComenzando"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.050000012" />

</androidx.constraintlayout.widget.ConstraintLayout>