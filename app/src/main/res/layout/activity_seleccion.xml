<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9B52AF"
    android:orientation="vertical"
    tools:context=".activities.ActivitySeleccion" >

    <Button
        android:id="@+id/botonInstrucciones"
        android:layout_width="170dp"
        android:layout_height="87dp"
        android:background="@drawable/color_azul"
        android:fontFamily="@font/best_in_class"
        android:onClick="mostrarInstrucciones"
        android:text="@string/boton_instrucciones"
        android:textColor="#D5FAFAFA"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/botonPracticar"
        android:layout_width="170dp"
        android:layout_height="87dp"
        android:background="@drawable/color_rosa"
        android:fontFamily="@font/best_in_class"
        android:onClick="practicar"
        android:text="@string/boton_practicar"
        android:textColor="#D5FAFAFA"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toEndOf="@+id/botonInstrucciones"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/textoTituloJuego"
        android:layout_width="301dp"
        android:layout_height="48dp"
        android:fontFamily="@font/best_in_class"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textColor="#D5FAFAFA"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/botonInstrucciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="270dp"
        android:layout_height="47dp"
        android:fontFamily="@font/best_in_class"
        android:text="@string/textoMinijuegos"
        android:textAlignment="center"
        android:textColor="#D5FAFAFA"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/textoTituloJuego"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textoTituloJuego"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/botonGlobos"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/color_morado"
                    android:foreground="@drawable/imagen_globos"
                    android:onClick="botonGlobos"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/botonBombas"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/color_morado"
                    android:foreground="@drawable/imagen_bombas"
                    android:onClick="botonBombas"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/botonSonidos"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/color_morado"
                    android:foreground="@drawable/imagen_sonidos"
                    android:onClick="botonSonidos"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/botonPulsaciones"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/color_morado"
                    android:foreground="@drawable/imagen_pulsaciones"
                    android:onClick="botonPulsaciones"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/botonReloj"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/color_morado"
                    android:foreground="@drawable/imagen_reloj"
                    android:onClick="botonReloj"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
