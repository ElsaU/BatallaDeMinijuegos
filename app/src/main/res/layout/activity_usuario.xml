<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#64D18C"
    tools:context=".activities.ActivityUsuario">

    <Button
        android:id="@+id/botonBuscar"
        android:layout_width="185dp"
        android:layout_height="150dp"
        android:background="@drawable/color_azul"
        android:enabled="true"
        android:fontFamily="@font/best_in_class"
        android:onClick="buscarPartida"
        android:text="@string/boton_buscar"
        android:textAlignment="center"
        android:textColor="#D5FAFAFA"
        android:textSize="38sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.78" />

    <TextView
        android:id="@+id/textBuscar"
        android:layout_width="179dp"
        android:layout_height="35dp"
        android:fontFamily="@font/best_in_class"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonBuscar"
        app:layout_constraintVertical_bias="0.016" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="280dp"
        android:layout_height="66dp"
        android:background="@drawable/color_toolbar"
        android:contextClickable="false"
        android:elevation="4dp"
        android:minHeight="60dp"
        android:textAlignment="inherit"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#D5FAFAFA" />

    <TextView
        android:id="@+id/textCarga"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:fontFamily="@font/best_in_class"
        android:text="@string/etiq_cargando"
        android:textAlignment="center"
        android:textColor="#BAFAFAFA"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/textPuntos"
        android:layout_width="185dp"
        android:layout_height="55dp"
        android:background="@drawable/color_naranja2"
        android:fontFamily="@font/best_in_class"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:textColor="#BAFAFAFA"
        android:textSize="34sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/botonBuscar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoPuntuacion"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/textoPuntuacion"
        android:layout_width="266dp"
        android:layout_height="34dp"
        android:fontFamily="@font/best_in_class"
        android:text="@string/text_mejor_puntuacion"
        android:textAlignment="center"
        android:textColor="#1B1A1A"
        android:textSize="30sp"
        android:textStyle="italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/botonBuscar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.07999998" />

    <Button
        android:id="@+id/botonClasificaion"
        android:layout_width="183dp"
        android:layout_height="51dp"
        android:background="@drawable/color_naranja2"
        android:fontFamily="@font/best_in_class"
        android:onClick="mostrarClasificacion"
        android:text="@string/botonClasificacion"
        android:textAlignment="center"
        android:textColor="#BAFAFAFA"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/botonBuscar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPuntos"
        app:layout_constraintVertical_bias="0.029999971" />

</androidx.constraintlayout.widget.ConstraintLayout>